	<div class="row">
  <div class="col-md-12">
  
        
          <%= form_for(@todo, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          
           <div class="form-group">
             <div class="control-label col-md-2">
                <%= f.label (t :todo_name) %> 
             </div>
             <div class="col-md-8">
               <%= f.text_field :name, class: 'form-control', placeholder: (t :placeholder_name), autofocus: true %>
             </div>
           </div>
          
          <div class="form-group">
             <div class="control-label col-md-2">
                <%= f.label (t :todo_description) %> 
             </div>
             <div class="col-md-8">
               <%= f.text_area :description, rows: 5, class: 'form-control', placeholder: (t :placeholder_description) %>
             </div>
           </div>
          
          
          
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= f.submit (t :create_todo), class: "btn btn-primary" %> 
              <%= link_to (t :back_to_index), todos_path, class: "btn btn-warning" %>
            </div>
          </div>
        
        <% end %>
      </p>
   
  </div>
</div>


